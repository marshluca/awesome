<h1>Listing addresses</h1>


<table>
  <tr>
    <th>Agent</th>
    <th>Postcode</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>Address3</th>
    <th>Town</th>
    <th>County</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.agent_id %></td>
    <td><%= address.postcode %></td>
    <td><%= address.address1 %></td>
    <td><%= address.address2 %></td>
    <td><%= address.address3 %></td>
    <td><%= address.town %></td>
    <td><%= address.county %></td>
    <td><%= address.country %></td>
    <td><%= link_to 'Show', agent_address_path(@agent, address) %></td>
    <td><%= link_to 'Edit', edit_agent_address_path(@agent, address) %></td>
    <td><%= link_to 'Destroy', agent_address_path(@agent, address), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br>

